<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>Search - Z2</name>
    <author>Zoearth</author>
    <creationDate>2013-11-01</creationDate>
    <copyright>Copyright (c)</copyright>
    <authorEmail>zoearthmoon@gmail.com</authorEmail>
    <authorUrl></authorUrl>
    <version>1.0.0</version>
    <description>Z2_THIS_PLUGIN_EXTENDS_THE_DEFAULT_JOOMLA_SEARCH_FUNCTIONALITY_TO_Z2_CONTENT</description>
    <files>
        <filename plugin="z2">z2.php</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="search_limit" type="text" size="5" default="50" label="Z2_SEARCH_LIMIT" description="Z2_THE_NUMBER_OF_ITEMS_TO_RETURN_WHEN_PERFORMING_A_SEARCH"/>
                <field name="search_tags" type="radio" default="0" label="Z2_ENABLE_SEARCHING_IN_TAGS" description="Z2_SELECT_IF_YOU_WANT_TO_SEARCH_ITEMS_TAGS_NOTE_THAT_THIS_CAN_BE_VERY_SLOW_ON_LARGE_SITES">
                    <option value="0">Z2_NO</option>
                    <option value="1">Z2_YES</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
